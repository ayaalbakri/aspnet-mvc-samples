﻿<!DOCTYPE html>
<html style="height: 100%; width: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Reports samples" />
    <title>Reports for ASP.NET MVC | Syncfusion</title>
    <script>
        function validateBrowser() {
            var uaValidate = navigator.userAgent.match(/(MSIE |Trident.*rv[ :])([0-9]+)/);
            if (uaValidate != null)
                return uaValidate[2];
            return null;
        }
        var ieVer = validateBrowser();
        if (ieVer != null && ieVer < 11) {
            if (!location.origin) {
                location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
                location.href = location.origin + '/error.html';
            }
        }
    </script>
    <link href="~/Content/css/common/common.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link href="~/Scripts/extensions/report-item-extensions/barcode.css" rel="stylesheet">
    <script src="~/Scripts/extensions/report-item-extensions/barcode.js"></script>
    <script src="~/Scripts/extensions/report-item-extensions/qrbarcode.js"></script>
    @Styles.Render("~/Content/preview")
    @Scripts.Render("~/bundles/preview")
    @Styles.Render("~/Content/codemirror")
    @Scripts.Render("~/bundles/codemirror")
</head>
<body>
    <div class="splash">
        <div class="message">ASP.NET MVC Reports</div>
        <div class="loader">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <style>

        body, .ej-body {
            height: 100%;
            margin: 0;
            width: 100%;
            overflow: hidden;
        }
    </style>
    <div class="ej-body e-hidden">
        @RenderBody()
    </div>
    <script>
        function getSampleData() {
            return @Html.Raw(ReportsMVCSamples.Models.SampleData.getSampleData());
        }
        function getBasePath() {
            return "@Url.Content("~/")";
        }
    </script>
    <script src="~/Scripts/common/global.js"></script>
    <script src="~/Scripts/common/preview.js"></script>
    @Html.SF().ScriptManager()
</body>
</html>
